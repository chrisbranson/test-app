<% if signed_in? %>
	<div class="row">
		<div class="col-sm-2"></div>
		<div class="col-sm-8">
			<div class="row">
				<div class="col-sm-4">
					<%= render 'users/profile' %>
				</div>

				<div class="col-sm-8">
					<%= render 'users/feed' %>
				</div>
			</div>
		</div>
		<div class="col-sm-2"></div>
	</div>
<% else %>
	<div class="row">
		<div class="col-sm-2"></div>
		<div class="col-sm-8">
			<div class="jumbotron">
				<h1>Welcome to Tweeter!</h1>
				<p>This is the next world beating version of Twitter that you've never heard of!</p>
				<p>To access the wonderful features of this web application, please sign in or sign up for a new account!</p>
				<p>
					<%= link_to "Sign in", signin_path, class: "btn btn-lg btn-primary" %>
					&nbsp;
					<%= link_to "Sign up", signup_path, class: "btn btn-lg btn-success" %>
				</p>
			</div>
		</div>
		<div class="col-sm-2"></div>
	</div>
<% end %>
