<%= form_for(@micropost) do |f| %>
  <%= render "shared/errors", resource: @micropost %>

  <div class="form-group">
    <%= f.label :content %><br>
    <%= f.text_field :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :user_id %><br>
    <%= f.select :user_id, options_for_select(User.all.map{ |user| [user.name, user.id] }), class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Save", class: "btn btn-default" %>
  </div>
<% end %>
