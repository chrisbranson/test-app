<%= render "shared/notice" %>

<div class="row">
  <div class="col-sm-12">

    <h1>Listing Microposts</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Content</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @microposts.each do |micropost| %>
          <tr>
            <td><%= micropost.content %></td>
            <td><%= micropost.user.name %></td>
            <td><%= link_to 'Show', micropost, class: "btn btn-default" %></td>
            <td><%= link_to 'Edit', edit_micropost_path(micropost), class: "btn btn-primary" %></td>
            <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>

<br>

<%= link_to 'New Micropost', new_micropost_path %>
