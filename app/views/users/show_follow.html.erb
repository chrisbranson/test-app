<dic class="row">
	<div class="col-sm-4">
		<%= gravatar_for @user %>
		<h1><%= @user.name %></h1>
		<span><%= link_to "view my profile", @user %></span>
		<span>Microposts: <%= @user.microposts.count %></span>

		<%= render 'users/stats' %>

		<% if @users.any? %>
			<div class="user_avatars">
				<% @users.each do |user| %>
					<%= link_to gravatar_for(user, size: 30), user %>
				<% end %>
			</div>
		<% end %>
	</div>

	<div class="col-sm-8">
		<h2><%= @title %></h2>
		<% if @users.any? %>
			<ul class="users">
				<% @users.each do |user| %>
					<li>
						<%= gravatar_for user %>
						<%= link_to user.name, user %>
					</li>
				<% end %>
			</ul>
			<%= will_paginate %>
		<% end %>
	</div>
</dic>
